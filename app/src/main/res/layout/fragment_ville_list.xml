<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_marginBottom="0dp"
>
    <com.google.android.material.textfield.TextInputLayout android:layout_width="374dp"
                                                           android:layout_height="68dp"
                                                           android:id="@+id/textInputLayout"
                                                           android:textColorHint="#BE03A9F4"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginStart="8dp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                                                           app:layout_constraintTop_toTopOf="parent"
                                                           app:layout_goneMarginTop="50dp">
        <com.tiper.MaterialSpinner
                android:id="@+id/material_spinner"
                android:layout_width="match_parent"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:boxBackgroundColor="#FFFFFF"
                android:textColorHint="#68000000" app:hintAnimationEnabled="true"
                android:hint="Filter par wilya" app:hintEnabled="true"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.example.myapplication.view.listvileeFragment"
            android:layout_width="399dp"
            android:layout_height="483dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".view.ListVilleFragment"
            tools:listitem="@layout/fragment_ville" android:background="#EDFFFFFF"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="8dp" app:layout_goneMarginLeft="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>