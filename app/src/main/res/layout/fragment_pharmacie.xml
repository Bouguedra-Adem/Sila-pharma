<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:orientation="horizontal">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/card" tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"
                android:layout_marginTop="5dp" android:background="#7593D0EC">

            <ImageButton
                    android:layout_width="63dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/localisation"
                    android:id="@+id/map"
                    android:layout_marginTop="44dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"/>
            <ImageButton
                    android:layout_width="72dp"
                    android:layout_height="48dp" app:srcCompat="@drawable/facebook"
                    android:id="@+id/fb"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/map"
                    android:layout_marginEnd="4dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="93dp"
                    android:layout_height="30dp"
                    android:id="@+id/horaire"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="98dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/horaire" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:id="@+id/telp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="152dp"
                    android:layout_height="22dp"
                    android:id="@+id/textname" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.683"
                    android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
